{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "dist/",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules/",
        "crypt/"
    ],
    "include": [
        "src/",
        "src/config/"
    ],
    "compileOnSave": true
}